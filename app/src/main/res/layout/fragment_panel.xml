<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/panel_image_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_first_album_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/home_panel_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/home_panel_btn_play_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/panel_image_iv" />

    <ImageView
        android:id="@+id/home_panel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_panel_title_tv" />

    <TextView
        android:id="@+id/home_panel_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:text="총 36곡 2020.06.05"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/home_panel_album_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_iv2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_panel_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="잠이 안온다"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_singer_tv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
        app:layout_constraintTop_toTopOf="@id/home_panel_album_img_iv" />

    <TextView
        android:id="@+id/home_panel_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="젠(zen)"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv"
        app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_tv" />

    <!-- panner album2 -->
    <ImageView
        android:id="@+id/home_panel_album_img_iv2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintBottom_toBottomOf="@id/panel_image_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_panel_album_title_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="잠이 안온다"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_singer_tv2"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv2"
        app:layout_constraintTop_toTopOf="@id/home_panel_album_img_iv2" />

    <TextView
        android:id="@+id/home_panel_album_singer_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="젠(zen)"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_iv2"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_iv2"
        app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_tv2" />

</androidx.constraintlayout.widget.ConstraintLayout>