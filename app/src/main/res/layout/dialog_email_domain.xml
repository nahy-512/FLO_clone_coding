<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="315dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/email_domain_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:text="도메인"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/email_domain_close_tv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/btn_titlebar_close"
        android:padding="5dp"
        android:backgroundTint="@color/gray_color"
        app:layout_constraintTop_toTopOf="@id/email_domain_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/email_domain_title_tv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/email_domain_radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/email_domain_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/domain_radio_1"
            android:text="직접 입력"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_2"
            android:text="naver.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_3"
            android:text="hanmail.net"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_4"
            android:text="daum.net"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_5"
            android:text="gmail.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_6"
            android:text="nate.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_7"
            android:text="hotmail.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_8"
            android:text="yahoo.co.kr"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_9"
            android:text="paran.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_10"
            android:text="lycos.co.kr"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_11"
            android:text="empal.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_12"
            android:text="cyworld.com"
            style="@style/email_domain_radio" />

        <RadioButton
            android:id="@+id/domain_radio_13"
            android:text="dreamwlz.com"
            style="@style/email_domain_radio" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>