<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/locker_music_select_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/locker_music_select_all_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:backgroundTint="@color/dark_gray_color"
            android:src="@drawable/btn_playlist_select_off"/>
        <TextView
            android:id="@+id/locker_music_select_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체선택"
            android:textColor="@color/dark_gray_color"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/locker_music_listen_all_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/locker_music_select_all_layout"
        app:layout_constraintBottom_toBottomOf="@id/locker_music_select_all_layout"
        app:layout_constraintStart_toEndOf="@id/locker_music_select_all_layout">
        <ImageView
            android:id="@+id/locker_music_listen_all_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="3dp"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/dark_gray_color"
            android:src="@drawable/ic_browse_arrow_right"/>
        <TextView
            android:id="@+id/locker_music_listen_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체듣기"
            android:textColor="@color/dark_gray_color"
            android:textSize="14sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>